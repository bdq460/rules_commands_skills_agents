{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": [],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "noEmitOnError": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "skills/**/*",
        "scripts/**/*",
        "agents/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "ESNext",
            "moduleResolution": "bundler"
        }
    }
}
